# Mango Tree Blockchain Configuration

# Network Configuration
PRIVATE_KEY=your_private_key_here
INFURA_KEY=your_infura_key_here

# API Keys for Contract Verification
CELOSCAN_API_KEY=your_celoscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Gas Reporting
REPORT_GAS=true

# Network URLs (Optional - defaults are provided)
CELO_RPC_URL=https://forno.celo.org
CELO_ALFAJORES_RPC_URL=https://alfajores-forno.celo-testnet.org
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
ETHEREUM_GOERLI_RPC_URL=https://goerli.infura.io/v3/YOUR_INFURA_KEY

# Solver Configuration
SOLVER_PRIVATE_KEY=your_solver_private_key_here
SOLVER_ADDRESS=your_solver_address_here

# Contract Addresses (Will be populated after deployment)
BET_CONTRACT_ADDRESS=
BET_ESCROW_ADDRESS=
INTENT_ROUTER_ADDRESS=
MOCK_TOKEN_ADDRESS=

# Cross-chain Configuration
AXELAR_API_URL=https://api.axelar.network
AXELAR_API_KEY=your_axelar_api_key_here

# Database Configuration (for backend integration)
MONGODB_URI=mongodb://localhost:27017/mango-tree
REDIS_URL=redis://localhost:6379

# WebSocket Configuration
WEBSOCKET_PORT=8080
WEBSOCKET_CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/blockchain.log